<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="/styles.css">
  </head>

  <body>
    <h1>Login Here</h1>

    <ul id="errors">
      {{#errors}}
        <li>{{msg}}</li>
      {{/errors}}
    </ul>

    <form id="login_form" action="/login" method="post">
      <div id="input1">
      <input type="email" name="email" placeholder="Email" value="{{userData.email}}"/></br>
    </div>

      <div id="input2">
      <input type="password" name="password" placeholder="Password" value="{{userData.password}}"/></br>
    </div>

      <button type="submit" name="button">Login</button>
    </form>

  </body>
</html>
